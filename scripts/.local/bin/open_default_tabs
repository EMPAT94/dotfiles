#!/usr/bin/env node

const { execSync } = require("node:child_process");

const personal = [
  "mail.google.com",
  "fanshaweonline.ca",
  "nextcloud.priteshtupe.com",
  "web.whatsapp.com",
];

const toptal = [
  "toptal.slack.com",
  "mail.google.com",
  "talent.toptal.com/portal",
];

const simpletire = [
  "simpletire.slack.com",
  "simpletire.atlassian.net/jira/your-work",
  "github.com",
  "mail.google.com",
];

const firefox = "/Applications/Firefox.app/Contents/MacOS/firefox";

async function sleep(time) {
  return new Promise((r) => setTimeout(r, time));
}

async function openSite(sites) {
  execSync(firefox + " --new-window https://" + sites.shift());
  await sleep(3000);
  execSync(firefox + sites.map((s) => " --new-tab https://" + s).join(" "));
}

console.log("TODO")

