#!/usr/bin/env bash
#
# List of (and hopefully installs) all the apps I use on macos
#

# Install xcode before anything so xcode-select points to
# developer tool chain.
# If not whole xcode, just download the binaries for xcode-select

# xcode-select --install

# Using Homebrew as package manager

/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

brew install \
  chromaprint \
  colima \
  docker \
  exa \
  exercism \
  fd \
  ffmpeg \
  fzf \
  git \
  gnupg \
  go \
  jq \
  koekeishiya/formulae/yabai \
  libyaml \
  neovim \
  node \
  openjdk \
  python@3.11 \
  ripgrep \
  rsync \
  stow \
  stylua \
  watch \
  wget \
  z \
  zsh-autosuggestions \
  zsh-syntax-highlighting

brew install --cask \
  alt-tab \
  authy \
  bitwarden \
  breaktimer \
  displaperture \
  firefox \
  font-jetbrains-mono \
  font-jetbrains-mono-nerd-font \
  gimp \
  hammerspoon \
  kitty \
  megasync \
  microsoft-auto-update \
  microsoft-office \
  nextcloud \
  qbittorrent \
  syncthing \
  vlc \
  zoom

# At this point, pull dotfiles from git and stow links
# Ensure pip, python, npm are setup properly

pip install \
  beets \
  black \
  bpytop \
  ipython \
  pyacoustid \
  pynvim \
  requests \
  ruff \
  twine \
  youtube-dl \
  zettelmerken \

npm --location=global install \
  neovim \
  nodemon \
  npm@latest \
  prettier \
  prettier-plugin-java \
  prettier-plugin-kotlin \
